<body>
  <div class="container">
    <div class="row">
      <div class="col-xl-12 text-center mx-auto my-4">
         <table class="table table-striped table-bordered bg-white">
           <thead>
             <tr>
               <td>Calorias Perdidas</td>
               <td>Peso perdido</td>
               <td>Tiempo</td>
             </tr>
           </thead>
           <tbody>
             {{#each calorias}}
             <tr>
               <td>{{calorias_perdidas}}</td>
               <td>{{peso_perdido}}kg</td>
               <td>{{timeago fecha}}</td>
             </tr>
             {{/each}}
           </tbody>
         </table>
      </div>
    </div>
  </div>
</body>
